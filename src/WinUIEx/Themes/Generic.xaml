<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinUIEx">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ms-appx:///WinUIEx/TitleBar/TitleBar.xaml" />
        <ResourceDictionary Source="ms-appx:///WinUIEx/NumberBox/NumberBox.xaml"  />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="local:CaptureElement" >
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:CaptureElement">
                    <SwapChainPanel x:Name="MediaSwapChain" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
